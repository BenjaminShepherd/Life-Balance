<div class="col l6 offset-l3 m8 offset-m2 s12">

  <section class="login">
    <div class="card z-depth-4">

      <ul class="collection with-header">
        <li class="collection-header light-green darken-1">
          <h5>Sign In</h5>
        </li>

        <form id="signin" method="post" action="/signin">
          <li class="collection-item">
            <input class="text" name="email" type="text" placeholder="Email Address" />
          </li>
          <li class="collection-item">
            <input name="password" type="password" placeholder="Password" />
          </li>

          <div class="btn-wrapper">
            <button type="submit" class="btn light-green darken-1">Signin</button>
            <a href="/signup"><span class="sm-link">Signup</span></a>
          </div>
        </form>

      </ul>

    </div>
  </section>

</div>